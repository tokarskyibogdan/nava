.social-buttons
  display inline-block
  list-style none
  padding 0
  margin-bottom 0
  li
    display inline-block
    margin-right 10px
    &:last-child
      margin-right 0

.btn-circle
  padding: 3px
  font-size: 10px
  width 20px
  height 20px
  color white
  border-radius 50%
  background-color #717171
  &:hover
    background-color #2b2d2f
    color white

  @media (min-width: 768px)
    padding: 5px
    font-size: 15px
    width 30px
    height 30px
  @media (min-width: 1200px)
    padding: 8px
    font-size: 18px
    width 40px
    height 40px

.red-btn
  font-weight 700
  background-color #e7434e
  font-size 14px
  border none
  border-radius 5px
  &:hover
    background-color #e78051
  img
    position relative
    top -1.4px

