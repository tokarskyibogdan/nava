@import "nib"

.text-gray
  color #717171

.display-none
  display none


button
  cursor pointer
  &:focus
    outline none

p
  margin 0
  font-size 7px
  @media (min-width: 768px)
    font-size 10px
  @media (min-width: 992px)
    font-size 13px
  @media (min-width: 1200px)
    font-size 16px

body
  font-family 'Raleway', sans-serif
  font-weight 400
  text-align center

h1
  text-transform uppercase
  letter-spacing: 0.1em
  font-weight 700
  font-size 20px
  @media (min-width: 576px)
    font-size 30px
  @media (min-width: 768px)
    font-size 40px
  @media (min-width: 992px)
    font-size 50px
  @media (min-width: 1200px)
    font-size 60px

h2
  letter-spacing: 0.1em
  font-size 10px
  @media (min-width: 576px)
    font-size 15px
  @media (min-width: 768px)
    font-size 20px
  @media (min-width: 992px)
    font-size 25px
  @media (min-width: 1200px)
    font-size 30px

a:hover
  text-decoration none

ul
  list-style none
  padding 0
  li
    display inline-block

.logo
  img
    width 70%
    @media (min-width: 576px)
      width 70%
    @media (min-width: 768px)
      width 80%
    @media (min-width: 992px)
      width 90%
    @media (min-width: 1200px)
      width 100%

.navigation
  margin-top -7px
  li
    text-transform uppercase
    margin-right 40px
    &:last-child
      margin-right 0
    a
      color #ffffff
      font-weight 700
      &:hover
        color: #e7434e

.sing-up
  border 1px solid #f9fafe
  border-radius 5px
  padding 8px 40px
  cursor pointer
  a:hover
    color #ffffff !important
  &:hover
    background-color #e7434e
    border-color #e7434e

header
  padding 0 5%
  position absolute
  top 7%
  z-index 2
  width 100%

.banner
  background-color #555555
  width 100%
  height 100vh
  overflow hidden
  &-content
    width 80%
    position absolute
    z-index 2
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);

.search
  margin-top 10%
  input
    font-size 14px
    padding 12px
    width 50%
    outline none
    &:placehlder
      color #717171

  button
    border-radius 0 5px 5px 0
    padding 14.03px 30px
    position relative
    top 0
    left -4px
    img
      margin-right 8px

.red-btn
  background-color #e7434e
  font-size 14px
  border none
  border-radius 5px
  &:hover
    background-color #e78051
  img
    position relative
    top -1.4px


.video
  position relative
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  opacity 0.6
  transform: translateX(-50%) translateY(-50%)

.numbers
  padding 1.5% 0
  box-shadow none
  border-radius 5px
  background-color #ffffff
  margin 0 auto
  z-index 3
  width 100%
  @media (min-width: 768px)
    position relative
    top -8vh
    width 70%
    box-shadow 0 0 30px rgba(52, 52, 52, 0.15)

  div
    font-family 'Open Sans', sans-serif
    border none
    @media (min-width: 768px)
      border none
      border-right 1px solid rgba(113,113,113,0.3)

    &:last-child
      border none

    h2
      font-weight 700

.destinations
  width 100%
  margin 2% auto
  @media (min-width: 768px)
    width 70%
    margin 4% auto

  p
    margin-bottom 5%

  div
    div
      padding 1%
      position relative
      img
        width 100%

      button,
      .img-caption
        position absolute
        left 10%

      button
        top 10%
        padding .8% 1.2%
        img
          width 30%
          margin-right 4px

      .img-caption
        bottom 7%
        text-align left
        h2
          margin-bottom 1%
          letter-spacing 1px
          font-weight 300
          font-family Raleway
          @media (min-width: 1200px)
            font-size 25px

        p
          margin-bottom 0
          font-weight 300
          letter-spacing .5px


.more-desti
  margin 6% auto 1% auto
  background-color transparent
  border 1px solid rgba(38, 38, 38, 0.3)
  padding 1.5% 4%
  font-size 14px
  border-radius 5px

.large-desti
  button,
  .img-caption
    left 5% !important

