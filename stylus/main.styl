@import "nib"

body
  font-family 'Raleway', sans-serif
  font-weight 400
  text-align center

h1
  text-transform uppercase
  letter-spacing: 0.1em
  font-weight 700
  font-size 30px
  @media (min-width: 576px)
    font-size 40px
  @media (min-width: 768px)
    font-size 50px
  @media (min-width: 992px)
    font-size 60px
  @media (min-width: 1200px)
    font-size 70px

h2
  letter-spacing: 0.1em
  text-transform uppercase
  font 400 10px "Open Sans", sans-serif
  @media (min-width: 576px)
    font-size 15px
  @media (min-width: 768px)
    font-size 20px
  @media (min-width: 992px)
    font-size 25px
  @media (min-width: 1200px)
    font-size 30px

a:hover
  text-decoration none

ul
  list-style none
  padding 0
  li
    display inline-block

.logo
  img
    width 70%
    @media (min-width: 576px)
      width 70%
    @media (min-width: 768px)
      width 80%
    @media (min-width: 992px)
      width 90%
    @media (min-width: 1200px)
      width 100%

.navigation
  li
    text-transform uppercase
    margin-right 40px
    &:last-child
      margin-right 0
    a
      color #ffffff
      font-weight 700
      &:hover
        color: #e7434e

.sing-up
  border 1px solid #f9fafe
  border-radius 5px
  padding 8px 40px
  cursor pointer
  a:hover
    color #ffffff !important
  &:hover
    background-color #e7434e
    border-color #e7434e

header
  padding 0 5% 0 5%
  position absolute
  top 7%
  z-index 2
  width 100%

.banner
  background-color #555555
  width 100%
  height 100vh
  overflow hidden
  &-content
    position absolute
    top 30vmin
    left 19vw
    z-index 2
    text-align center

.search
  margin-top 10%

  input
    font-size 14px
    padding 12px
    width 60%
    outline none
    &:placehlder
      color #717171

  button
    outline none
    font-size 14px
    padding 14.03px 30px
    cursor pointer
    background-color #e7434e
    border none
    border-radius 0 5px 5px 0
    position relative
    top 0
    left -4px
    &:hover
      background-color #e78051

    img
      margin -1px 10px 0 0

.video
  position relative
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  opacity 0.6
  transform: translateX(-50%) translateY(-50%)