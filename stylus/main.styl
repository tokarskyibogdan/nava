@import "nib"
@import "_buttons.styl"

.text-gray
  color #717171

.display-none
  display none

button
  cursor pointer
  &:focus
    outline none

p
  margin 0
  font-size 10px
  @media (min-width: 768px)
    font-size 13px
  @media (min-width: 1200px)
    font-size 16px

body
  font-family 'Raleway', sans-serif
  font-weight 400
  text-align center

h1
  text-transform uppercase
  letter-spacing: 0.1em
  font-weight 700
  font-size 20px
  @media (min-width: 576px)
    font-size 30px
  @media (min-width: 768px)
    font-size 40px
  @media (min-width: 992px)
    font-size 50px
  @media (min-width: 1200px)
    font-size 60px

h2
  letter-spacing: 0.1em
  font-size 10px
  @media (min-width: 576px)
    font-size 15px
  @media (min-width: 768px)
    font-size 20px
  @media (min-width: 992px)
    font-size 25px
  @media (min-width: 1200px)
    font-size 30px

h6
  text-transform uppercase
  font-weight 700
  font-size 10px
  @media (min-width: 768px)
    font-size 12px
  @media (min-width: 1200px)
    font-size 14px

a:hover
  text-decoration none

ul
  list-style none
  padding 0
  li
    display inline-block

.logo
  img
    @media (min-width: 576px)
      width 70%
    @media (min-width: 768px)
      width 80%
    @media (min-width: 992px)
      width 90%
    @media (min-width: 1200px)
      width 100%

.navigation
  margin-top -7px
  li
    text-transform uppercase
    margin-right 10px
    &:last-child
      margin-right 0

    @media (min-width: 576px)
      margin-right 15px
    @media (min-width: 768px)
      margin-right 25px
    @media (min-width: 992px)
      margin-right 35px
    @media (min-width: 1200px)
      margin-right 40px

    a
      color #ffffff
      font-weight 700
      &:hover
        color: #e7434e

.sing-up
  border 1px solid #f9fafe
  border-radius 5px
  padding 8px 40px
  cursor pointer
  a:hover
    color #ffffff !important
  &:hover
    background-color #e7434e
    border-color #e7434e

header
  padding 0 5%
  position absolute
  top 7%
  z-index 2
  width 100%

.banner
  background-color #555555
  background url('../img/bg1.jpg') no-repeat
  background-size cover
  background-color #555555
  background-blend-mode multiply
  background-position 50% 50%
  width 100%
  height 100vh
  overflow hidden
  &-content
    width 80%
    position absolute
    z-index 2
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)

.search,
.subscribe
  input
    font-size 14px
    padding 12px
    width 50%
    outline none
    &:placehlder
      color #717171

.search
  margin-top 10%
  input
    width 95%
    @media (min-width: 576px)
      width 80%
    @media (min-width: 768px)
      width 70%
    @media (min-width: 992px)
      width 60%
    @media (min-width: 1200px)
      width 50%

  button
    border-radius 5px
    padding 14.03px 30px
    position relative
    top 0
    left -4px
    margin-top 3%
    img
      margin-right 8px
    @media (min-width: 768px)
      border-radius 0 5px 5px 0

.video-top
  position relative
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  transform: translateX(-50%) translateY(-50%)

.numbers
  padding 1.5% 0
  box-shadow none
  border-radius 5px
  background-color #ffffff
  margin 0 auto
  z-index 3
  width 100%
  margin-top 3%
  @media (min-width: 768px)
    position relative
    top -90px
    width 70%
    box-shadow 0 0 30px rgba(52, 52, 52, 0.15)

  div
    font-family 'Open Sans', sans-serif
    border none
    @media (min-width: 576px)
      border-right 1px solid rgba(113,113,113,0.3)
    @media (min-width: 768px)
      border none
      border-right 1px solid rgba(113,113,113,0.3)

    &:last-child
      border none

    h2
      font-weight 700

.number-caption
  margin-top -2%
  @media (min-width: 768px)
    margin-top -2%

.destinations,
.featured-boats
  width 100%
  margin 4% auto
  @media (min-width: 768px)
    width 70%
  p
    margin-bottom 5%

  div
    div
      padding 1%
      position relative
      div
        border-radius 5px
        overflow hidden
        padding 0
        img
          transition 2s
          overflow hidden
          width 100%
          height 100%
        &:hover
          img
            transform scale(1.3)

        button,
        .img-caption
          position absolute
          left 10%

        button
          top 10%
          padding .8% 1.2%
          img
            width 30%
            margin-right 4px
          p
            margin-bottom 0
            font-weight 300
            letter-spacing .5px

.img-caption
  z-index 2
  bottom 7%
  text-align left
  h2
    margin-bottom 1%
    letter-spacing 1px
    font-weight 300
    font-family Raleway
    @media (min-width: 1200px)
      font-size 25px

.more
  &-desti,
  &-boats
    font-weight 700
    margin 6% auto 1% auto
    background-color transparent
    border 1px solid rgba(38, 38, 38, 0.3)
    padding 1.5% 4%
    font-size 14px
    border-radius 5px
    &:hover
      background-color beige

.large-desti
  button,
  .img-caption
    left 5% !important

.own-boat
  background url('../img/bg2.jpg') no-repeat
  background-color #555555
  background-blend-mode multiply
  background-position 50% 50%
  background-size cover
  position relative
  height 60vh
  overflow hidden
  button
    margin-top 4%
    padding 1% 2%

  video
    position relative
    width auto
    height auto
    top 50%
    left 50%
    z-index 2
    transform: translateX(-50%) translateY(-50%)

.own-boat-conent
  width 80%
  position absolute
  z-index 2
  top 50%
  left 50%
  transform translateX(-50%) translateY(-50%)

.featured-boats
  div
    div
      div
        button,
        .img-caption
          left 6%

footer
  background-color #404040
  padding 5% 0
  position relative
  &:before
    content " "
    width 100%
    height 5px
    position absolute
    top 0
    left 0
    z-index 2
    background repeating-linear-gradient( -45deg, #051242, #051242 .3em, transparent .3em, transparent 1em)
    background-color #e7434e

.footer-content
  width 100%
  text-align left
  p
    font-size 14px
  @media (min-width: 768px)
    width 70%

.footer-boats,
.footer-contacts,
.footer-locations,
.footer-subscribe
  padding 0
  p
    padding-right 10%
    font-size 8px
    line-height 14px
    @media (min-width: 768px)
      font-size 10px
      line-height 24px
    @media (min-width: 1200px)
      font-size 14px
      line-height 34px

.footer-subscribe
  margin-right -4%
  @media (min-width: 576px)
    margin-right 0

.subscribe
  margin 4% 0 8% 0
  input
    padding 1% 2.2%
    width 60%
  button
    border-radius 0 5px 5px 0
    position relative
    left -5px
    padding 1.5% 5%
    @media (max-width: 1003px)
      border-radius 5px
      margin-top 3%
      left 0

.footer-locations
.footer-boats
  margin-right 3%
  @media (max-width: 350px)
    margin-right 6%

.footer-locations
  padding-left 15px

.black-hover
  &:before
    transition 2s
    content " "
    height 0
    width 100%
    position absolute
    bottom 0
    left 0
    z-index 1
    background-color rgba(0,0,0, 0.6)
  &:hover
    &:before
      transition 2s
      height 50%

.fa-user
  margin-left 5px